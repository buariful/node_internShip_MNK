<div class="container pb-5" style="display: none" id="form">
  <div class="row">
    <div class="col-12 col-md-5">
      <h5>Additional Information</h5>
      <form action="/schedule" method="post">
        <div class="mb-3">
          <label for="fullName" class="fw-bold form-label">Full Name</label>
          <input
            type="text"
            class="form-control"
            id="fullName"
            name="name"
            aria-describedby="fullName"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="fw-bold form-label">Email</label>
          <input type="email" name="email" class="form-control" id="email" />
        </div>

        <div class="mb-3">
          <label for="company" class="fw-bold form-label">Company</label>
          <input
            type="text"
            class="form-control"
            name="company"
            id="company"
            aria-describedby="company"
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="fw-bold form-label">Phone</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            aria-describedby="phone"
          />
        </div>
        <div class="mb-3">
          <label for="notes" class="fw-bold form-label">Your Notes</label>
          <textarea class="form-control" name="notes" id="notes"></textarea>
        </div>

        <!-- hidden inputs -->
        <input type="hidden" name="timezone" id="timezone_input" />
        <input type="hidden" name="schedule_date" id="date_input" />
        <input type="hidden" name="schedule_time" id="time_input" />

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
